{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "src",
    "rootDir": "src",
    "module": "esnext"
  },
  "exclude": ["node_modules"]
}
